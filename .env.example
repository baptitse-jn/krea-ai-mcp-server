# Krea AI API Key (required)
# Get your API key from https://krea.ai
KREA_API_KEY=your_api_key_here

# Server Configuration (optional)
# Transport mode: 'http' or 'stdio' (default: stdio)
TRANSPORT_MODE=stdio

# HTTP server port (only used when TRANSPORT_MODE=http)
PORT=3000

# Base URL for Krea AI API (optional, defaults to https://api.krea.ai)
KREA_BASE_URL=https://api.krea.ai

# Polling Configuration (optional)
# Interval in milliseconds between status checks when waiting for job completion
POLLING_INTERVAL=2000

# Maximum time in milliseconds to wait for job completion
POLLING_TIMEOUT=300000
